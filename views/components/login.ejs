<h3>로그인</h3>
<form action="/user" method="post" onsubmit="return login()">
    <table>
        <tr>
            <td>ID : </td>
            <td><input id="user_name" type="text" name="username"></td>
        </tr>
        <tr>
            <td>비번 : </td>
            <td><input id ="user_pwd" type="password" name="password"></td>
        </tr>
        <tr>
            <td><input type="submit" value="로그인"></td>
        </tr>
    </table>
</form>

<script>

    function login(){
        const name = document.getElementById('user_name').value;
        const pwd = document.getElementById('user_pwd').value;
        $.ajax({
        url : "/user/login",
        method : "POST",
        dataType :"text",
        data : {
            username : `${name}`,
            password : `${pwd}`
        },
        }).done(function(result){
            if(result == 'ok'){
                alert('ok');
                return true;
            }else{
                alert('fail')
                return false;
            }
        })
        return false;
    }
  
</script>
